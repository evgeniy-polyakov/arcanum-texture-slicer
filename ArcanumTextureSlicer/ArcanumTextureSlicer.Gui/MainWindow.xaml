<Window x:Class="ArcanumTextureSlicer.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArcanumTextureSlicer.Gui"
        xmlns:commands="clr-namespace:ArcanumTextureSlicer.Gui.Commands"
        xmlns:controls="clr-namespace:ArcanumTextureSlicer.Gui.Controls"
        mc:Ignorable="d"
        Title="Arcanum Texture Slicer" Height="600" Width="800">

    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Open" Executed="Open_Executed" CanExecute="Open_CanExecute" />
        <CommandBinding Command="commands:Commands.MoveGridUp" Executed="MoveGrid_Executed"
                        CanExecute="MoveGrid_CanExecute" />
        <CommandBinding Command="commands:Commands.MoveGridDown" Executed="MoveGrid_Executed"
                        CanExecute="MoveGrid_CanExecute" />
        <CommandBinding Command="commands:Commands.MoveGridLeft" Executed="MoveGrid_Executed"
                        CanExecute="MoveGrid_CanExecute" />
        <CommandBinding Command="commands:Commands.MoveGridRight" Executed="MoveGrid_Executed"
                        CanExecute="MoveGrid_CanExecute" />
    </Window.CommandBindings>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open..." Command="ApplicationCommands.Open" />
                <MenuItem Header="Export..." />
            </MenuItem>
            <MenuItem Header="Grid">
                <MenuItem Header="Move Up" Command="commands:Commands.MoveGridUp" CommandParameter="up" />
                <MenuItem Header="Move Down" Command="commands:Commands.MoveGridDown" CommandParameter="down" />
                <MenuItem Header="Move Left" Command="commands:Commands.MoveGridLeft" CommandParameter="left" />
                <MenuItem Header="Move Right" Command="commands:Commands.MoveGridRight" CommandParameter="right" />
            </MenuItem>
        </Menu>
        <ScrollViewer Focusable="False"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <Grid>
                <controls:BitmapViewer x:Name="BitmapViewer" />
                <controls:GridViewer x:Name="GridViewer" />
            </Grid>
        </ScrollViewer>
    </DockPanel>

</Window>